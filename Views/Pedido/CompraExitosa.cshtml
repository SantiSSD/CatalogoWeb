@model CatalogoWeb.Models.Pedido

<div class="container mt-5">
    <div class="card shadow-lg border-0 text-center">
        <div class="card-body p-5">

            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>

            <h2 class="text-success fw-bold">¡Compra realizada con éxito!</h2>

            <p class="mt-3 text-muted">
                Gracias por tu compra. Tu pedido fue registrado correctamente.
            </p>

            <hr class="my-4" />

            <div class="mb-4">
                <p><strong>Número de pedido:</strong> @Model.Id</p>
                <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <a asp-action="Details"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary btn-lg">
                    Ver detalle del pedido
                </a>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-outline-secondary btn-lg">
                    Seguir comprando
                </a>
            </div>

        </div>
    </div>
</div>
