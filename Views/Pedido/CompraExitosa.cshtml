@model CatalogoWeb.Models.Pedido

@{
    ViewData["Title"] = "Pedido Exitoso";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 text-center">
        <div class="card-body p-5">

            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>

            <h2 class="text-success fw-bold">¡Pedido realizado con éxito!</h2>

            <p class="mt-3 text-muted">
                Gracias por tu compra. Tu pedido ha sido pagado y será procesado pronto.
            </p>

            <hr class="my-4" />

            <div class="row text-start">
                <div class="col-md-6 offset-md-3">
                    <div class="card bg-light">
                        <div class="card-body">
                            <p><strong>Número de pedido:</strong> #@Model.Id</p>
                            <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Estado:</strong> <span class="badge bg-success">Pagado</span></p>
                            <p><strong>Total:</strong> <span class="text-success fw-bold">$ @Model.Total.ToString("N2")</span></p>
                            
                            <hr />
                            
                            <p class="mb-1"><strong>Envío:</strong></p>
                            <p class="text-muted mb-0">@Model.Nombre</p>
                            <p class="text-muted mb-0">@Model.Direccion</p>
                            <p class="text-muted mb-0">@Model.Ciudad, @Model.CodigoPostal</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <a asp-action="Details"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary btn-lg">
                    Ver detalle del pedido
                </a>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-outline-secondary btn-lg">
                    Seguir comprando
                </a>
            </div>

            <div class="mt-4 text-muted small">
                <p>Recibirás un correo electrónico de confirmación shortly.</p>
            </div>

        </div>
    </div>
</div>