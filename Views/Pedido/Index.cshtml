@model List<CatalogoWeb.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<style>
    .order-row {
        transition: background-color 0.2s ease;
    }
    .order-row:hover {
        background-color: #f8f9fa;
    }
    .status-badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.65rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-receipt me-2 text-primary"></i>Mis Pedidos
        </h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">
            <i class="bi bi-shop me-1"></i>Seguir Comprando
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-receipt display-1 text-muted"></i>
                <h4 class="mt-3 fw-semibold">No hay pedidos registrados</h4>
                <p class="text-muted">Aún no has realizado ningún pedido</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
                    <i class="bi bi-shop me-1"></i>Comenzar a Comprar
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="ps-4">Pedido</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Ciudad</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th class="text-end pe-4">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pedido in Model)
                            {
                                <tr class="order-row">
                                    <td class="ps-4">
                                        <strong>#@pedido.Id</strong>
                                    </td>
                                    <td>
                                        <div class="text-muted small">@pedido.Fecha.ToString("dd/MM/yyyy")</div>
                                        <div class="small">@pedido.Fecha.ToString("HH:mm")</div>
                                    </td>
                                    <td>@pedido.Nombre</td>
                                    <td>@pedido.Ciudad</td>
                                    <td>
                                        <span class="fw-bold text-success">$ @pedido.Total.ToString("N2")</span>
                                    </td>
                                    <td>
                                        @switch (pedido.Estado)
                                        {
                                            case EstadoPedido.Pendiente:
                                                <span class="badge bg-warning text-dark status-badge">Pendiente</span>
                                                break;
                                            case EstadoPedido.Pagado:
                                                <span class="badge bg-success status-badge">Pagado</span>
                                                break;
                                            case EstadoPedido.PagoRechazado:
                                                <span class="badge bg-danger status-badge">Pago Rechazado</span>
                                                break;
                                            case EstadoPedido.EnPreparacion:
                                                <span class="badge bg-info text-dark status-badge">En Preparación</span>
                                                break;
                                            case EstadoPedido.Enviado:
                                                <span class="badge bg-primary status-badge">Enviado</span>
                                                break;
                                            case EstadoPedido.Entregado:
                                                <span class="badge bg-secondary status-badge">Entregado</span>
                                                break;
                                            case EstadoPedido.Completado:
                                                <span class="badge bg-dark status-badge">Completado</span>
                                                break;
                                            case EstadoPedido.Cancelado:
                                                <span class="badge bg-danger status-badge">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@pedido.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>Ver detalle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
