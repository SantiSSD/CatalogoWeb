@model CatalogoWeb.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Producto</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-7">
                                <label asp-for="Nombre" class="form-label fw-bold">Nombre de Categoria</label>
                                <div class="input-group">
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Samsung A54" />
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                           
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Detalles técnicos..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <a asp-action="Index" class="text-secondary text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="bi bi-save me-2"></i>Guardar Categoria
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
