@model CatalogoWeb.Models.Categoria

@{
    ViewData["Title"] = "Details";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                <div class="row g-0">

                    <div class="col-md-4 bg-primary d-flex align-items-center justify-content-center text-white">
                        <div class="text-center p-5">
                            <i class="bi bi-tag-fill" style="font-size: 5rem;"></i>
                            <p class="mt-2 text-uppercase fw-bold small">Categoría</p>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-soft-primary text-primary mb-2">ID: #@Model.Id</span>
                            </div>

                            <h1 class="display-6 fw-bold text-dark">@Model.Nombre</h1>

                            <hr class="my-4" />

                            <div class="mb-5">
                                <h6 class="text-uppercase text-muted fw-bold small mb-3">Descripción</h6>
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    <p class="lead text-secondary">@Model.Descripcion</p>
                                }
                                else
                                {
                                    <p class="text-muted italic">Sin descripción disponible para esta categoría.</p>
                                }
                            </div>

                            <div class="d-flex gap-2 pt-3 border-top">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 shadow-sm">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="bi bi-arrow-left me-1"></i> Volver al listado
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: #e7f1ff;
    }
</style>