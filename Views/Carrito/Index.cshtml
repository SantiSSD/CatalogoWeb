

@model List<CarritoItem>

@{
    var totalGeneral = Model.Sum(i => i.PrecioUnitario * i.Cantidad);
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">üõí Carrito de Compras</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-volver">
            ‚Üê Volver a Productos
        </a>
        <style>
         .btn-volver
         {
            background-color: deepskyblue;
            color: white;
        
         }
         .btn-volver:hover
         {
                background-color: dodgerblue;
                color: white;
            
         
         }

        </style>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm p-4 text-center">
            <h5 class="text-muted">Tu carrito est√° vac√≠o</h5>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                Ir a comprar
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body">

                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var totalItem = item.PrecioUnitario * item.Cantidad;

                            <tr>
                                <td class="fw-semibold">@item.NombreProducto</td>

                                <td>$ @item.PrecioUnitario</td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @item.Cantidad
                                    </span>
                                </td>

                                <td class="fw-bold text-success">
                                    $ @totalItem
                                </td>

                                <td class="text-center">
                                    <a asp-action="Agregar"
                                       asp-route-id="@item.ProductoId"
                                       class="btn btn-sm btn-success">
                                        +
                                    </a>

                                    <a asp-action="Restar"
                                       asp-route-id="@item.ProductoId"
                                       class="btn btn-sm btn-warning">
                                        ‚àí
                                    </a>

                                    <a asp-action="Eliminar"
                                       asp-route-id="@item.ProductoId"
                                       class="btn btn-sm btn-danger">
                                        üóë
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr />

                <div class="d-flex justify-content-end">
                    <h4 class="fw-bold">
                        Total General:
                        <span class="text-primary">$ @totalGeneral</span>
                    </h4>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <a asp-controller="Carrito" asp-action="Checkout" class="btn btn-success btn-lg">
                        Comprar
                    </a>
                </div>

            </div>
        </div>
    }

</div>