@model List<CarritoItem>

@{
    ViewData["Title"] = "Checkout - Finalizar Pedido";
    var totalGeneral = Model.Sum(i => i.PrecioUnitario * i.Cantidad);
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    .checkout-card {
        border: none;
        border-radius: 12px;
    }
    .order-summary {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
    }
    .form-label {
        font-weight: 500;
        color: #495057;
    }
    .section-title {
        font-weight: 600;
        color: #212529;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-check-circle me-2 text-success"></i>Finalizar Pedido
        </h2>
        <a asp-controller="Carrito" asp-action="Index" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left me-1"></i>Volver al Carrito
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>Tu carrito está vacío
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-shop me-1"></i>Ir a comprar
        </a>
    }
    else
    {
        <form id="checkoutForm" asp-controller="Carrito" asp-action="FinalizarCompra" method="post">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="card checkout-card shadow-sm">
                                <div class="card-header bg-primary text-white py-3">
                                    <h5 class="mb-0 fw-semibold">
                                        <i class="bi bi-truck me-2"></i>Datos de Envío
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label">Nombre completo <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" name="Nombre" required placeholder="Juan Pérez" />
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label">Dirección <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" name="Direccion" required placeholder="Calle Principal 123" />
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3 mb-md-0">
                                            <label class="form-label">Ciudad <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" name="Ciudad" required placeholder="Buenos Aires" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Código Postal <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" name="CodigoPostal" required placeholder="C1000" />
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6 mb-3 mb-md-0">
                                            <label class="form-label">Teléfono <span class="text-danger">*</span></label>
                                            <input type="tel" class="form-control" name="Telefono" required placeholder="+54 9 11 1234 5678" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="card checkout-card shadow-sm">
                                <div class="card-header bg-success text-white py-3">
                                    <h5 class="mb-0 fw-semibold">
                                        <i class="bi bi-credit-card me-2"></i>Datos de Pago
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-4">
                                        <label class="form-label">Método de Pago <span class="text-danger">*</span></label>
                                        <select class="form-select" name="MetodoPago" id="metodoPago" required>
                                            <option value="">Seleccionar método de pago...</option>
                                            <option value="TarjetaCredito">
                                                <i class="bi bi-credit-card"></i> Tarjeta de Crédito
                                            </option>
                                            <option value="TarjetaDebito">Tarjeta de Débito</option>
                                            <option value="PayPal">PayPal</option>
                                        </select>
                                    </div>

                                    <div id="datosTarjeta">
                                        <div class="mb-3">
                                            <label class="form-label">Número de Tarjeta</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-credit-card-2-front"></i></span>
                                                <input type="text" class="form-control" name="NumeroTarjeta" placeholder="1234 5678 9012 3456" maxlength="19" />
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4 mb-3">
                                                <label class="form-label">Mes</label>
                                                <select class="form-select" name="MesExpiracion">
                                                    <option value="">MM</option>
                                                    @for (int m = 1; m <= 12; m++)
                                                    {
                                                        <option value="@m.ToString("D2")">@m.ToString("D2")</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label class="form-label">Año</label>
                                                <select class="form-select" name="AnoExpiracion">
                                                    <option value="">AA</option>
                                                    @for (int y = DateTime.Now.Year; y <= DateTime.Now.Year + 10; y++)
                                                    {
                                                        <option value="@y">@y</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label class="form-label">CVV</label>
                                                <input type="text" class="form-control" name="CVV" placeholder="123" maxlength="4" />
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Nombre del Titular</label>
                                            <input type="text" class="form-control" name="NombreTitular" placeholder="Nombre como aparece en la tarjeta" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 mt-3 mt-lg-0">
                    <div class="card checkout-card shadow-sm">
                        <div class="card-header bg-light py-3">
                            <h5 class="mb-0 fw-semibold">
                                <i class="bi bi-receipt me-2"></i>Resumen del Pedido
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="order-summary p-3 rounded mb-3">
                                @foreach (var item in Model)
                                {
                                    <div class="d-flex justify-content-between mb-2 small">
                                        <span class="text-truncate" style="max-width: 150px;">@item.NombreProducto x @item.Cantidad</span>
                                        <span class="fw-medium">$ @((item.PrecioUnitario * item.Cantidad).ToString("N2"))</span>
                                    </div>
                                }
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Subtotal</span>
                                <span>$ @totalGeneral.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Envío</span>
                                <span class="text-success"><i class="bi bi-check-circle"></i> Gratis</span>
                            </div>
                            
                            <hr />
                            
                            <div class="d-flex justify-content-between mb-4">
                                <span class="fw-bold fs-5">Total</span>
                                <span class="fw-bold fs-4 text-success">$ @totalGeneral.ToString("N2")</span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                    <i class="bi bi-lock me-2"></i>Confirmar y Pagar
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Seguir Comprando
                                </a>
                            </div>
                            
                            <div class="mt-3 text-center text-muted small">
                                <i class="bi bi-shield-lock me-1"></i>Pago 100% seguro
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('metodoPago').addEventListener('change', function() {
            var datosTarjeta = document.getElementById('datosTarjeta');
            if (this.value === 'TarjetaCredito' || this.value === 'TarjetaDebito') {
                datosTarjeta.style.display = 'block';
            } else {
                datosTarjeta.style.display = 'none';
            }
        });

        document.getElementById('checkoutForm').addEventListener('submit', function(e) {
            var metodo = document.getElementById('metodoPago').value;
            if (metodo === 'TarjetaCredito' || metodo === 'TarjetaDebito') {
                var numero = document.querySelector('input[name="NumeroTarjeta"]').value;
                var mes = document.querySelector('select[name="MesExpiracion"]').value;
                var ano = document.querySelector('select[name="AnoExpiracion"]').value;
                var cvv = document.querySelector('input[name="CVV"]').value;
                
                if (!numero || !mes || !ano || !cvv) {
                    alert('Por favor complete todos los datos de la tarjeta');
                    e.preventDefault();
                }
            }
        });
    </script>
}
