@model List<CarritoItem>

@{
    ViewData["Title"] = "Checkout";
    var totalGeneral = Model.Sum(i => i.PrecioUnitario * i.Cantidad);
}

<div class="container mt-5">
    <h2 class="mb-4">Finalizar Pedido</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Tu carrito está vacío</div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ir a comprar</a>
    }
    else
    {
        <form id="checkoutForm" asp-controller="Carrito" asp-action="FinalizarCompra" method="post">
            <div class="row">
                <div class="col-md-7">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Datos de Envío</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Nombre completo</label>
                                <input type="text" class="form-control" name="Nombre" required />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Dirección</label>
                                <input type="text" class="form-control" name="Direccion" required />
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Ciudad</label>
                                    <input type="text" class="form-control" name="Ciudad" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Código Postal</label>
                                    <input type="text" class="form-control" name="CodigoPostal" required />
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Teléfono</label>
                                <input type="tel" class="form-control" name="Telefono" required />
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Datos de Pago</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Método de Pago</label>
                                <select class="form-select" name="MetodoPago" id="metodoPago" required>
                                    <option value="">Seleccionar...</option>
                                    <option value="TarjetaCredito">Tarjeta de Crédito</option>
                                    <option value="TarjetaDebito">Tarjeta de Débito</option>
                                    <option value="PayPal">PayPal</option>
                                </select>
                            </div>

                            <div id="datosTarjeta">
                                <div class="mb-3">
                                    <label class="form-label">Número de Tarjeta</label>
                                    <input type="text" class="form-control" name="NumeroTarjeta" placeholder="1234 5678 9012 3456" maxlength="19" />
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Mes</label>
                                        <select class="form-select" name="MesExpiracion">
                                            <option value="">MM</option>
                                            @for (int m = 1; m <= 12; m++)
                                            {
                                                <option value="@m.ToString("D2")">@m.ToString("D2")</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Año</label>
                                        <select class="form-select" name="AnoExpiracion">
                                            <option value="">AA</option>
                                            @for (int y = DateTime.Now.Year; y <= DateTime.Now.Year + 10; y++)
                                            {
                                                <option value="@y">@y</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">CVV</label>
                                        <input type="text" class="form-control" name="CVV" placeholder="123" maxlength="4" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Nombre del Titular</label>
                                    <input type="text" class="form-control" name="NombreTitular" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Resumen del Pedido</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span>@item.NombreProducto x @item.Cantidad</span>
                                    <span>$ @(item.PrecioUnitario * item.Cantidad)</span>
                                </div>
                            }

                            <hr />

                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong class="text-success">$ @totalGeneral</strong>
                            </div>

                            <button type="submit" class="btn btn-success w-100 btn-lg">
                                Confirmar y Pagar
                            </button>

                            <div class="mt-3 text-center text-muted small">
                                <i class="bi bi-shield-lock"></i> Pago seguro
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('metodoPago').addEventListener('change', function() {
            var datosTarjeta = document.getElementById('datosTarjeta');
            if (this.value === 'TarjetaCredito' || this.value === 'TarjetaDebito') {
                datosTarjeta.style.display = 'block';
            } else {
                datosTarjeta.style.display = 'none';
            }
        });

        document.getElementById('checkoutForm').addEventListener('submit', function(e) {
            var metodo = document.getElementById('metodoPago').value;
            if (metodo === 'TarjetaCredito' || metodo === 'TarjetaDebito') {
                var numero = document.querySelector('input[name="NumeroTarjeta"]').value;
                var mes = document.querySelector('select[name="MesExpiracion"]').value;
                var ano = document.querySelector('select[name="AnoExpiracion"]').value;
                var cvv = document.querySelector('input[name="CVV"]').value;
                
                if (!numero || !mes || !ano || !cvv) {
                    alert('Por favor complete todos los datos de la tarjeta');
                    e.preventDefault();
                }
            }
        });
    </script>
}
