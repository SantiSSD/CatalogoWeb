@model CatalogoWeb.Models.Rol

@{
    ViewData["Title"] = "Create";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="text-center mb-4">
                <div class="bg-primary d-inline-block p-3 rounded-circle shadow-sm mb-3">
                    <i class="bi bi-shield-lock text-white" style="font-size: 2rem;"></i>
                </div>
                <h2 class="fw-bold">Crear Nuevo Rol</h2>
                <p class="text-muted">Define los permisos y el nombre para el nuevo perfil del sistema.</p>
            </div>

            <div class="card shadow border-0" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 small" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre del Rol</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-person-badge"></i></span>
                                <input asp-for="Nombre" class="form-control border-start-0 bg-light" placeholder="Ej: Administrador" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control bg-light" rows="3" placeholder="Describe brevemente las funciones de este rol..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-check-circle me-1"></i> Guardar Rol
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted mt-2">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}