@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Detalles de " + Model.Nombre;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-sm border-0" style="border-radius: 15px; overflow: hidden;">
                <div class="row g-0">

                    <div class="col-md-5 bg-light d-flex align-items-center justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                        {
                            <img src="@Model.ImagenUrl" class="img-fluid" alt="@Model.Nombre" style="max-height: 400px; object-fit: contain;" />
                        }
                        else
                        {
                            <div class="text-muted p-5 text-center">
                                <i class="bi bi-image" style="font-size: 4rem;"></i>
                                <p>Sin imagen disponible</p>
                            </div>
                        }
                    </div>

                    <div class="col-md-7">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <span class="badge bg-info text-dark mb-2">@Model.Categoria?.Nombre</span>
                                @* <span class="text-muted small">ID: #@Model.Id</span> *@
                            </div>

                            <h1 class="display-6 fw-bold">@Model.Nombre</h1>

                            <hr />

                            <div class="mb-4">
                                <h6 class="text-uppercase text-muted fw-bold small">Descripción</h6>
                                <p class="lead">@Model.Descripcion</p>
                            </div>

                            <div class="row mb-4">
                                <div class="col-6">
                                    <h6 class="text-uppercase text-muted fw-bold small">Precio</h6>
                                    <h3 class="text-primary fw-bold">$@Model.Precio.ToString("N2")</h3>
                                </div>
                                <div class="col-6">
                                    <h6 class="text-uppercase text-muted fw-bold small">Stock Disponible</h6>
                                    <span class="badge @(Model.Stock > 0 ? "bg-success" : "bg-danger")">
                                        @Model.Stock unidades
                                    </span>
                                </div>
                            </div>

                            <div class="d-flex gap-2 pt-3 border-top">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    Volver al listado
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>