@model IEnumerable<CatalogoWeb.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Gestión de Inventario</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body">
            <form asp-controller="Productos" asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filtrar por Categoría</label>
                    <select name="categoriaId" asp-items="ViewBag.Categorias" class="form-select">
                        <option value="">-- Todas las categorías --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">
                        <i class="bi bi-filter me-1"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="ps-3">Producto</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImagenUrl" alt="img" class="rounded me-3" style="width: 45px; height: 45px; object-fit: cover; border: 1px solid #dee2e6;">
                                    <div>
                                        <div class="fw-bold">@item.Nombre</div>
                                        <div class="text-muted small">@item.Descripcion.Substring(0, Math.Min(item.Descripcion.Length, 30))...</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill bg-info text-dark">@item.Categoria?.Nombre</span>
                            </td>
                            <td class="fw-bold">$@item.Precio.ToString("N2")</td>
                            <td>
                                <span class="@(item.Stock < 10 ? "text-danger fw-bold" : "")">@item.Stock</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning d-inline-flex align-items-center">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info d-inline-flex align-items-center">
                                        <i class="bi bi-eye me-1"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger d-inline-flex align-items-center">
                                        <i class="bi bi-trash me-1"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
