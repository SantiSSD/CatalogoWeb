@model CatalogoWeb.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Editar Producto</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-7">
                                <label asp-for="Nombre" class="form-label fw-bold">Nombre del Producto</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Samsung A54" />
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="CategoriaId" class="form-label fw-bold">Categoría</label>
                                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Detalles técnicos..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Precio" class="form-label fw-bold">Precio (USD)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label fw-bold">Stock Inicial</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-hash"></i></span>
                                    <input asp-for="Stock" class="form-control" type="number" />
                                </div>
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImagenUrl" class="form-label fw-bold">Enlace de la Imagen (URL)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                                <input asp-for="ImagenUrl" id="inputUrl" class="form-control" placeholder="https://ejemplo.com/foto.jpg" />
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <label class="form-label fw-bold">Vista Previa</label>
                            <div class="border rounded d-flex align-items-center justify-content-center bg-light" style="height: 100px; overflow: hidden;">
                                <img id="imgPreview" src="#" alt="Previsualización" class="img-fluid d-none" style="max-height: 100%;" />
                                <div id="noImageText" class="text-muted small">Sin imagen</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <a asp-action="Index" class="text-secondary text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="bi bi-save me-2"></i>Guardar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Seleccionamos los elementos
        const inputUrl = document.getElementById('inputUrl');
        const imgPreview = document.getElementById('imgPreview');
        const noImageText = document.getElementById('noImageText');

        // Función que actualiza la imagen
        inputUrl.addEventListener('input', function() {
            const url = inputUrl.value;

            if (url && url.trim() !== "") {
                imgPreview.src = url;
                imgPreview.classList.remove('d-none'); // Mostrar imagen
                noImageText.classList.add('d-none');    // Ocultar texto "Sin imagen"
            } else {
                imgPreview.classList.add('d-none');
                noImageText.classList.remove('d-none');
            }
        });

        // Por si ocurre un error al cargar la URL (ej: no es una imagen real)
        imgPreview.addEventListener('error', function() {
            imgPreview.classList.add('d-none');
            noImageText.classList.remove('d-none');
            noImageText.innerText = "URL no válida";
        });
    </script>
}
}
